<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Your Spooky Space Details Here!</h1>
  <%= simple_form_for @space do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br />
    <%= f.submit 'Update', :class => 'btn btn-primary' %>
  <% end %>
</div>